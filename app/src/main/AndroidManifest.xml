<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ihces.barganha">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Facebook login permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SearchResultsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_results" />
        <activity android:name=".AdvertiseActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_advertise" />
        <activity android:name=".MyAdsList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_my_ads" />
        <activity android:name=".AdDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_ad_details" />
    </application>

</manifest>