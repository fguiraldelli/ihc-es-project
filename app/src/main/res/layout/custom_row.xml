<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/row_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:text="TextView"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_description"
        tools:text="Description"
        android:layout_alignStart="@+id/row_title"
        android:layout_alignEnd="@+id/row_price"
        android:layout_alignBottom="@+id/row_image"
        android:layout_below="@+id/row_title" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:id="@+id/row_price"
        tools:text="R$####,##"
        android:layout_alignTop="@+id/row_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_title"
        tools:text="Advertise Title"
        android:layout_alignTop="@+id/row_image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>