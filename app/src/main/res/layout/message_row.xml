<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_sender_name"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sender_name"
        android:layout_alignStart="@+id/tv_sender_name"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_message_text"
        android:textSize="20sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginStart="10dp"
        android:layout_alignEnd="@+id/tv_message_time"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="5h 30min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_time"
        android:textStyle="normal|italic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_alignBaseline="@+id/tv_sender_name" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cacaca"
        android:id="@+id/item_separator"
        android:layout_below="@+id/tv_message_text"
        android:layout_margin="10dp" />

</RelativeLayout>